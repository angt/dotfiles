[user]
    name = Adrien Gallouët
    email = adrien@gallouet.fr
[sendemail]
    from = Adrien Gallouët <adrien@gallouet.fr>
    smtpEncryption = tls
    smtpServer = smtp.gmail.com
    smtpUser = agallouet@gmail.com
    smtpServerPort = 587
[credential "smtp://agallouet%40gmail.com@smtp.gmail.com%3a587"]
    helper = secret gmail/agallouet/git
[alias]
    st = status -s -uno
    ci = commit
    br = branch
    fa = fetch --all
    co = checkout
    ls = ls-files
    df = diff
    dw = diff --word-diff=color
    ds = diff --staged
    ll = log --oneline -20
    rh = reset --hard
    rb = rebase
    cp = cherry-pick
    sh = show
    outgoing = format-patch -M -n -s -o outgoing
    cleanup = commit -am 'Code cleanup'
    amend = commit --amend --reuse-message=HEAD
    hf = config user.email angt@huggingface.co
[diff "hex"]
    textconv = hexdump -v -C
    binary = true
[core]
    pager = less -F -X
    editor = vim
[gc]
    auto = 0
[url "git@gitlab.com:"]
    insteadOf = gl:
[url "git@github.com:"]
    insteadOf = gh:
[url "https://gitlab.com/"]
    insteadOf = glh:
[url "https://github.com/"]
    insteadOf = ghh:
[url "aur@aur.archlinux.org:"]
    insteadOf = aur:
[url "https://aur.archlinux.org/"]
    insteadOf = aurh:
[merge]
    tool = diffconflicts
[mergetool "diffconflicts"]
    cmd = vim -c DiffConflicts \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
    trustExitCode = true
[mergetool]
    keepBackup = false
[commit]
    cleanup = verbatim
