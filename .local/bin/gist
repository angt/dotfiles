#!/bin/sh

if [ ! -f "$1" ]; then
	echo "Usage: $(basename "$0") <FILE>"
	exit 1
fi

if [ -f ~/.gistrc ]; then
	GIST=$(cat ~/.gistrc)
else
	printf "Enter [username:token]: "
	read -r GIST
	( umask 077; echo "$GIST" > ~/.gistrc )
fi

[ "$GIST" ] || exit

jq -Rs --arg file "$(basename "$1")" '{public:false,files:{($file):{content:.}}}' "$1" \
	| curl -sSf -X POST -d@- -u "$GIST" "https://api.github.com/gists" \
	| jq -r '.files[]|"\(.raw_url)"'
