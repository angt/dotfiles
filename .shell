#!/bin/sh

shell_add_path() {
	mkdir -p "$1" || return
	f=$(cd "$1" && pwd)
	case ":$PATH:" in
		*":$f:"*) :;;
		*) export PATH="$f:$PATH";;
	esac
	unset f
}

shell_reload_sh() {
	[ "$1" ] || return
	[ -d ~/.shell.d ] || return
	for f in ~/.shell.d/?*."${1##*/}"; do
		[ -f "$f" ] && . "$f"
	done
}

shell_reload() {
	shell_add_path ~/.bin
	shell_reload_sh sh
	shell_reload_sh "$BASH"
}

shell_reload
