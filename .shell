#!/bin/sh

shell_has_cmd() {
	command -v "$1" >/dev/null
}

shell_add_path() {
	mkdir -p "$1" || return
	f=$(cd "$1" && pwd)
	case ":$PATH:" in (*":$f:"*) ;;
	(*) export PATH="$f${PATH:+:$PATH}"
	esac
	unset f
}

shell_add_ld_library_path() {
	mkdir -p "$1" || return
	f=$(cd "$1" && pwd)
	case ":$LD_LIBRARY_PATH:" in (*":$f:"*) ;;
	(*) export LD_LIBRARY_PATH="$f${LD_LIBRARY_PATH:+:$LD_LIBRARY_PATH}"
	esac
	unset f
}

shell_add_dyld_library_path() {
	mkdir -p "$1" || return
	f=$(cd "$1" && pwd)
	case ":$DYLD_LIBRARY_PATH:" in (*":$f:"*) ;;
	(*) export DYLD_LIBRARY_PATH="$f${DYLD_LIBRARY_PATH:+:$DYLD_LIBRARY_PATH}"
	esac
	unset f
}

shell_add_lib_path() {
	case "$(uname -s)" in
	(Darwin) shell_add_dyld_library_path "$@" ;;
	(Linux) shell_add_ld_library_path "$@" ;;
	esac
}

shell_add_manpath() {
	mkdir -p "$1" || return
	f=$(cd "$1" && pwd)
	case ":$MANPATH:" in (*":$f:"*) ;;
	(*) export MANPATH="$f${MANPATH:+:$MANPATH}"
	esac
	unset f
}

shell_reload_sh() {
	[ "$1" ] || return
	[ -d ~/.shell.d ] || return
	for f in ~/.shell.d/?*."${1##*/}"; do
		[ -f "$f" ] && . "$f"
	done
	unset f
}

shell_reload() {
	[ "$USER" ] || USER=$(id -un)
	[ "$HOME" ] || HOME=$(eval echo "~$USER")
	export USER HOME
	export PATH="/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin"
	export MANPATH="/usr/share/man:/usr/local/share/man"
	unset LD_PRELOAD LD_LIBRARY_PATH DYLD_LIBRARY_PATH
	shell_add_path ~/.bin
	shell_reload_sh sh
	shell_reload_sh "$BASH"
	shell_reload_sh "${YASH_VERSION+yash}"
	shell_reload_sh "${ZSH_VERSION+zsh}"
	shell_reload_sh "${KSH_VERSION+ksh}"
	[ -f ~/.local.sh ] && . ~/.local.sh
	hash -r 2>/dev/null || :
}

shell_reload
