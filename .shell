#!/bin/sh

shell_add_path() {
    mkdir -p "${1}" && case ":${PATH}:" in
        *":${1}:"*) :;;
        *) export PATH="${1}:${PATH}";;
    esac
}

shell_update() {
    cd ~
    [ -d .no.git ] && mv .no.git .git
    [ -d .git ] || return
    git fetch --all
    git reset --hard origin/master
    mv .git .no.git
}

shell_reload() {
    if [ -d ~/.shell.d ] ; then
        for f in ~/.shell.d/?*.sh ; do
            [ -f "$f" ] && . "$f"
        done
        unset f
    fi
}

shell_reload
